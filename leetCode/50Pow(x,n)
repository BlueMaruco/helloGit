public double myPow(double x,int n){
	  if(n==0) return 1;
	    double p = myPow(x,n/2);
	  if(n%2)
	    return n<0?1/x*p*p:x*p*p;
    else
      return p*p;
}

public double myPow(double x,int n){
	if(n==0) return 1;
	if(n<0){
	  n = -n; // wrong!! -2^31*-1 will be out of bound!!!
	  x = 1/x;
  }
  double t = myPow(x*x,n/2);
  return n%2==0?t:x*t;
}
