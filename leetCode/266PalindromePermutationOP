public class Solution{

    public boolean canPermutePalindrome(String str){
    	int[] count = new int[256];
    	for(int i = 0;i<str.length();i++){
    		count[(int)str.charAt(i)]++;
        }
        boolean flag = false;
        for(int i = 0;i<256;i++){
    	    if(count[i]%2!=0){
                if(!flag)
                    flag = true;
                else
                    return false;
            }
        }
        return true;
    }

}
